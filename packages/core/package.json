{
  "name": "@srt2fcpx/core",
  "version": "0.1.0",
  "private": true,
  "description": "Core library for SRT to FCPXML conversion (internal use only)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run clean && node esbuild.config.js && tsc --emitDeclarationOnly && tsc-alias && pnpm run copy-fixtures",
    "copy-fixtures": "mkdir -p dist && cp -r fixtures dist/fixtures",
    "dev": "node esbuild.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@srt2fcpx/eslint-config": "workspace:*",
    "@srt2fcpx/tsconfig": "workspace:*",
    "@types/node": "^24.10.1",
    "esbuild": "^0.24.2",
    "eslint": "9.39.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
