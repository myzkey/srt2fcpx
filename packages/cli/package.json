{
  "name": "srt2fcpx",
  "version": "0.0.7",
  "description": "Convert SRT subtitle files to Final Cut Pro FCPXML format",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "srt2fcpx": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myzkey/srt2fcpx.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/myzkey/srt2fcpx#readme",
  "bugs": {
    "url": "https://github.com/myzkey/srt2fcpx/issues"
  },
  "scripts": {
    "build": "pnpm run clean && node esbuild.config.js && pnpm run build:types && pnpm run copy-fixtures",
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts --project tsconfig.json --external-types",
    "copy-fixtures": "mkdir -p dist/fixtures && cp -r ../core/src/fixtures/* dist/fixtures/",
    "clean": "rm -rf dist",
    "dev": "tsx src/cli.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@srt2fcpx/tsconfig": "workspace:*",
    "@types/node": "^22.10.2",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "srt",
    "fcpxml",
    "final-cut-pro",
    "subtitle",
    "conversion",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
